
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @list.photo.attached? ? cl_image_path(@list.photo.key) : image_path('https://images5.alphacoders.com/102/1022332.jpg') %>)">
  <div class="container">
    <h1><%= @list.name %></h1>
      <%= link_to "Add Movie", new_list_bookmark_path(@list), class: "banner_button"%>
  </div>
</div>

<div class="cards">
  <% @list.movies.each do |movie| %>
  <div class="card movie">
    <% if @list.photo.attached? %>
      <%= cl_image_tag @list.photo.key %>
    <% else %>
      <%= image_tag 'https://images5.alphacoders.com/102/1022332.jpg' %>
    <% end %>
    <div class="row">
      <p><%= movie.title %></p>
    </div>
    <div class="card movie description">
      <p><%= movie.overview %></p>
    </div>
  </div>
  <% end %>
</div>

<%= link_to "Home", lists_path, class: "button" %>
