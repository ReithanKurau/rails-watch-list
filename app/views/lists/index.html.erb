<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images5.alphacoders.com/102/1022332.jpg');">
  <div class="container">
    <h1>Movie Land Dream</h1>
    <p>Create lists. Add movies.</p>
    <%= link_to "Create List", new_list_path, class: "banner_button"%>
  </div>
</div>


  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card">
        <div class="row">
          <% if list.photo.attached? %>
            <%= cl_image_tag list.photo.key %>
          <% else %>
            <%= image_tag 'https://images5.alphacoders.com/102/1022332.jpg' %>
          <% end %>
          <div class="card-info">
            <div>
              <p><%= list.name %></p>
              <%= link_to "Check", list_path(list), class: "button"%>
              <%= link_to 'Delete',
               list_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'button' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
