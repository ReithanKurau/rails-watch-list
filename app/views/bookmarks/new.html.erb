<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Add a Movie</h1>
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.association :movie %>
        <%= f.input :comment %>
        <%= f.submit class: 'button' %>
        <%= link_to "Cancel", list_path(@list), class: "button"%>
      <% end %>
    </div>
  </div>
</div>
